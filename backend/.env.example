# Entorno de ejecución
NODE_ENV=production

# Puerto del servidor
PORT=3000

# Base de datos MySQL
DB_HOST=localhost
DB_USER=tu_usuario_mysql
DB_PASSWORD=tu_password_seguro
DB_NAME=bromato_full_4

# JWT - GENERAR NUEVO CON: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
# ⚠️ CAMBIAR ESTE VALOR EN PRODUCCIÓN
JWT_SECRET=CAMBIAR_POR_CLAVE_SEGURA_DE_64_CARACTERES

# CORS - Dominio permitido (cambiar según producción)
# Ejemplos:
# - Local: http://localhost:3000
# - Producción: https://tudominio.com
CORS_ORIGIN=http://localhost:3000

# URL pública para QR codes (CAMBIAR POR TU DOMINIO EN PRODUCCIÓN)
# Ejemplos:
# - Desarrollo: http://localhost:3000
# - Producción: https://tudominio.com
PUBLIC_URL=http://localhost:3000

# Configuración de Email (SMTP)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=tu_email@gmail.com
EMAIL_PASSWORD=tu_app_password_de_google
EMAIL_FROM="Dirección de Calidad de Vida <tu_email@gmail.com>"

# Rate Limiting - Protección contra fuerza bruta
# Ventana de tiempo en milisegundos (15 minutos = 900000)
RATE_LIMIT_WINDOW_MS=900000
# Máximo de intentos de login por ventana
RATE_LIMIT_MAX_REQUESTS=5
